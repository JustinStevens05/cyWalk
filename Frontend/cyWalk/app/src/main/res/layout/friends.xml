<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:background="@color/cywalkRed"
        android:ems="10"
        android:paddingVertical="15dp"
        android:fontFamily="sans-serif-black"
        android:text="Friends"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="75sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/friendsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="You currently have no friends\ntry adding some below"
                android:textColor="@color/black"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newFriendSection"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newFriendTile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="To send a friend request enter thier username"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/friendUsername"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/text_border"/>
        </LinearLayout>

        <Button
            android:id="@+id/friendSubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:text="Send Request"
            android:textSize="15sp"
            android:layout_marginBottom="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:background="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Requests"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/requestsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emptyRequestText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Currently no pending requests"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/acceotFriendSection"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acceptFriendTile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="To accept a friend enter thier username"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/acceptedFriendUsername"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/text_border"/>
        </LinearLayout>

        <Button
            android:id="@+id/acceptFriendSubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:text="Approve"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:text="Back"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>